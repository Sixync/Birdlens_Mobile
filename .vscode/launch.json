{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "android",
            "request": "launch",
            "name": "Run Android on Emulator",
            "appSrcRoot": "${workspaceRoot}/app/src/main",
            "apkFile": "${workspaceRoot}/app/build/outputs/apk/debug/app-debug.apk",
            "adbPort": 5037,
            "preLaunchTask": "assembleDebug",
            "packageName": "com.example.birdlens",
            "activityName": "com.example.birdlens.MainActivity"
        }
    ],
    "tasks": {
        "version": "2.0.0",
        "tasks": [
            {
                "label": "assembleDebug",
                "type": "shell",
                "command": "${workspaceRoot}/gradlew",
                "windows": {
                    "command": "${workspaceRoot}/gradlew.bat"
                },
                "args": [
                    "assembleDebug"
                ],
                "group": "build"
            }
        ]
    }
}